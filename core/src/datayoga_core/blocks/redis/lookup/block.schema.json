{
  "title": "redis.write",
  "description": "Write to a Redis data structure",
  "type": "object",
  "properties": {
    "connection": { "title": "Connection name", "type": "string" },
    "command": {
      "title": "Redis command",
      "description": "Redis command expressions",
      "type": "object",
      "properties": {
        "elements": {
          "description": "The list of command's elements",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "language": {
          "description": "Language",
          "type": "string",
          "enum": ["jmespath", "sql"]
        }
      },
      "required": ["elements", "language"]
    },
    "field": {
      "type": "string",
      "title": "Target field",
      "description": "The field to write the result to"
    },
    "reject_on_error": {
      "type": "boolean",
      "default": false,
      "title": "Reject on error",
      "description": "Should reject a record on error or not in case if the key is of a different type"
    }
  },
  "additionalProperties": false,
  "required": ["connection", "command", "field"]
}
